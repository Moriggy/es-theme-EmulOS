<theme>

	<formatVersion>4</formatVersion>

	<feature supported="carousel">
	
		<view name="system">
		
			<!-- #### Imagen de fondo estatica #### -->
			
			<image name="background" extra="true">		
				<path>./assets/bg.png</path>
				<size>1 1</size>
				<pos>0 0</pos>
				<zIndex>1</zIndex>
			</image>
			
			<!-- #### Logo de sistema #### -->
			
			<image name="logo">
				<path>./assets/logos/${system.theme}.png</path>
			</image>
			
			<!-- #### Modo de vista de los sistemas - modo horizontal #### -->
			
			<carousel name="systemcarousel">
				<type>horizontal</type>
				<pos>0 -0.025</pos>
				<size>1 1</size>
				<origin>0 0</origin>
				<color>FFFFFF00</color>
				<logoScale>1.7</logoScale>
				<logoSize>0.2 0.18</logoSize>
				<maxLogoCount>3</maxLogoCount>
				<zIndex>3</zIndex>
			</carousel>
			
			<!-- #### Barra fondo para logos de sistemas #### -->
					
			<image name="systemcarousel_background" extra="true">
				<tile>false</tile>
				<pos>0 0.2</pos>
				<size>1 0.5</size>
				<path>./assets/system_carousel_horizontal_background.png</path>
				<color>7c6c6b</color>
				<zIndex>2</zIndex>
			</image>
			
			<!-- #### Numero de juegos del sistema #### -->
			
			<text name="systemInfo">
				<backgroundColor>ffffff00</backgroundColor>
				<color>ffffff</color>
				<origin>0.5 0.5</origin>
				<pos>0.5 0.77</pos>
				<fontPath>./assets/ewert_regular.ttf</fontPath>
				<fontSize>0.035</fontSize>
				<alignment>center</alignment>
				<zIndex>3</zIndex>			
			</text>
			
			<image name="systemInfoBack" extra="true">
				<tile>false</tile>
				<size>1 0.1</size>
				<pos>0 0.72</pos>
				<path>./assets/system_carousel_horizontal_background.png</path>
				<color>7c6c6b</color>
				<zIndex>2</zIndex>
			</image>
			
			<!-- #### Texto info sistema #### -->
			
			<helpsystem name="help">
				<pos>0.17 0.92</pos>
				<textColor>000000</textColor>
				<iconColor>ffffff</iconColor>
				<fontPath>./assets/Benguiat Bold.ttf</fontPath>
				<fontSize>0.025</fontSize>			
			</helpsystem>
			
			<image name="systemHelpBack" extra="true">
				<tile>false</tile>
				<size>1 0.1</size>
				<pos>0 0.88</pos>
				<path>./assets/system_carousel_horizontal_background.png</path>
				<color>7c6c6b</color>
				<zIndex>2</zIndex>
			</image>
			
		</view>
	
	</feature>
		
	<view name="detailed, video">
	
		<!-- #### Fondo gamelist #### -->
		
		<image name="backgroundfilter" extra="true">		
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./assets/gamelist.png</path>
			<zIndex>1</zIndex>			
		</image>
			
		<!-- #### Logo sistema #### -->
		
		<image name="logo" extra="false">
			<path>./assets/logos/${system.theme}.png</path>
			<pos>0.58 0.13</pos>
			<size>0.15 0.12</size>
			<zIndex>2</zIndex>			
		</image>
	
		<!-- #### Texto del sistema #### -->

		<helpsystem name="help">
			<pos>0.07 0.953</pos>
			<textColor>ed1c16</textColor>
			<iconColor>ffffff</iconColor>
			<fontPath>./assets/Benguiat Bold.ttf</fontPath>
			<fontSize>0.025</fontSize>			
		</helpsystem>
	
	</view>
	
	<view name="basic">
	
		<!-- #### Fondo gamelist #### -->
		
		<image name="backgroundfilter" extra="true">		
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./assets/gamelist_basic.png</path>
			<zIndex>1</zIndex>			
		</image>
		
		<!-- #### Posicion de listado de juegos #### -->
		
		<textlist name="gamelist">		
			<selectorImagePath>./assets/selector.png</selectorImagePath>
			<selectorColor>719CC6</selectorColor>
			<selectedColor>ffffff</selectedColor>
			<primaryColor>dee0e8</primaryColor>
			<secondaryColor>eac428</secondaryColor>
			<alignment>center</alignment>
			<fontPath>./assets/ewert_regular.ttf</fontPath>	
			<forceUppercase>1</forceUppercase>
			<pos>0.26 0.11</pos>
			<size>0.48 0.657</size>
			<fontSize>0.03</fontSize>
			<lineSpacing>1.475</lineSpacing>
			<horizontalMargin>0.035</horizontalMargin>
			<scrollSound>./assets/scroll.wav</scrollSound>
			<zIndex>3</zIndex>			
		</textlist>
		
		<!-- #### Texto del sistema #### -->

		<helpsystem name="help">
			<pos>0.07 0.953</pos>
			<textColor>ed1c16</textColor>
			<iconColor>ffffff</iconColor>
			<fontPath>./assets/Benguiat Bold.ttf</fontPath>
			<fontSize>0.025</fontSize>			
		</helpsystem>
		
	</view>
	
	<view name="detailed">
	
		<!-- #### Posicion y tamaño imagen juego #### -->

		<image name="md_image">		
			<size>0.443 0.64</size>
			<origin>0 0</origin>
			<pos>0.02 0.12</pos>
			<zIndex>2</zIndex>
		</image>
		
	</view>
	
	<feature supported="video">
	
		<view name="video">
		
			<!-- #### Posicion y tamaño del video juego #### -->

			<video name="md_video">			
				<size>0.443 0.64</size>
				<origin>0 0</origin>
				<pos>0.02 0.12</pos>
				<delay>0.8</delay>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>true</showSnapshotDelay>
				<zIndex>2</zIndex>
			</video>
			
		</view>
		
	</feature>
			
	<view name="detailed,video">
	
		<!-- #### Posicion de listado de juegos #### -->
		
		<textlist name="gamelist">		
			<selectorImagePath>./assets/selector.png</selectorImagePath>
			<selectorColor>719CC6</selectorColor>
			<selectedColor>ffffff</selectedColor>
			<primaryColor>dee0e8</primaryColor>
			<secondaryColor>eac428</secondaryColor>
			<alignment>left</alignment>
			<fontPath>./assets/ewert_regular.ttf</fontPath>	
			<forceUppercase>1</forceUppercase>
			<pos>0.685 0.11</pos>
			<size>0.3 0.657</size>
			<fontSize>0.03</fontSize>
			<lineSpacing>1.475</lineSpacing>
			<horizontalMargin>0.035</horizontalMargin>
			<scrollSound>./assets/scroll.wav</scrollSound>
			<zIndex>3</zIndex>			
		</textlist>

		<!-- #### Metadatos #### -->
		
		<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount, md_lbl_favorite">
		
			<color>ffffff</color>
			<forceUppercase>1</forceUppercase>
			<fontPath>./assets/BADABB.TTF</fontPath>
			<fontSize>0.025</fontSize>
			<size>0.12 0.04</size>
			<zIndex>3</zIndex>
			
		</text>
				
		<text name="md_rating, md_developer, md_publisher, md_genre, md_players, md_playcount, md_favorite ,md_releasedate, md_lastplayed">
		
			<color>ffffff</color>
			<forceUppercase>1</forceUppercase>
			<fontPath>./assets/BADABB.TTF</fontPath>
			<fontSize>0.035</fontSize>
			<size>0.14 0.04</size>
			<zIndex>3</zIndex>
			
		</text>

		<!-- #### Descripcion juego #### -->
		
		<text name="md_description">
		
			<pos>0.49 0.31</pos>
			<size>0.19 0.188</size>
			<color>4646fe</color>
			<fontPath>./assets/steelfishrg.ttf</fontPath>
			<fontSize>0.026</fontSize>
			<forceUppercase>1</forceUppercase>
			<zIndex>3</zIndex>
			
		</text>
		
		<text name="md_lbl_rating">
			<pos>0.49 0.55</pos>
		</text>

		<rating name="md_rating">
			<pos>0.495 0.59</pos>
			<size>0.028 0.028</size>
			<filledPath>./assets/star_filled.png</filledPath>
			<unfilledPath>./assets/star_empty.png</unfilledPath>
		</rating>
		
		<text name="md_lbl_players">
			<pos>0.49 0.62</pos>
		</text>
		
		<text name="md_players">
			<pos>0.495 0.65</pos>
		</text>
			
		<text name="md_lbl_genre">
			<pos>0.49 0.69</pos>
		</text>
		
		<text name="md_genre">
			<pos>0.495 0.72</pos>
		</text>
			
		<text name="md_lbl_releasedate">
			<pos>0.58 0.55</pos>
		</text>
		
		<datetime name="md_releasedate">
			<pos>0.585 0.59</pos>
			<zIndex>3</zIndex>
		</datetime>
			
		<text name="md_lbl_developer">
			<pos>1 1</pos>
		</text>
		
		<text name="md_developer">
			<pos>1 1</pos>
		</text>
			
		<text name="md_lbl_publisher">
			<pos>1 1</pos>
		</text>
		
		<text name="md_publisher">
			<pos>1 1</pos>
		</text>
			
		<text name="md_lbl_lastplayed">
			<pos>1 1</pos>
		</text>
		
		<datetime name="md_lastplayed">
			<pos>1 1</pos>
		</datetime>
			
		<text name="md_lbl_playcount">
			<pos>1 1</pos>
		</text>
		
		<text name="md_playcount">
			<pos>1 1</pos>
		</text>
		
		<text name="md_lbl_favorite">
			<pos>1 1</pos>
		</text>
		
		<text name="md_favorite">
			<pos>1 1</pos>
		</text>
		
	</view>
	
	<!-- #### MODO DE VISTA GRID #### -->
	<view name="grid">
		<image name="background" extra="true">
			<path>./assets/gamelist_bg_basic-grid.png</path>
			<tile>false</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
	</image>

	<helpsystem name="help">
			<pos>0.07 0.953</pos>
			<textColor>ed1c16</textColor>
			<iconColor>ffffff</iconColor>
			<fontPath>./assets/Benguiat Bold.ttf</fontPath>
			<fontSize>0.025</fontSize>			
	</helpsystem>
	
	<image name="logo-grid" extra="true">
			<path>./assets/logos/${system.theme}.png</path>
			<pos>0.405 0.008</pos>
			<maxSize>0.22 0.1</maxSize>
			<size>0.2 0.09</size>
			<origin>0 0</origin>
	</image>

	<imagegrid name="gamegrid">
			<pos>0.246 0.21</pos>
			<size>0.56 0.5</size>
			<margin>0.096 0.05</margin>
	</imagegrid>

	<gridtile name="default">
			<size>0.2051 0.28</size>
			<backgroundImage>./assets/selector-grid.png</backgroundImage>
			<backgroundColor>00000000</backgroundColor>
	</gridtile>

	<gridtile name="selected">
			<size>0.2557 0.4</size>
			<backgroundColor>ffffff90</backgroundColor>
		</gridtile>
	</view>
		
</theme>
